@model ProductMVCApp.Models.CreateViewModel

@{
    ViewData["Title"] = "Create";
    int count = Model.ProductCount + 1;
}

<h1>Create</h1>

<h4>Product #@Html.DisplayFor(c => count)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" id="quantityInput" onkeyup="quantityFilter()" onmouseup="quantityFilter()" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" id="priceInput" onkeyup="replaceComma()" onmouseup="replaceComma()" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function quantityFilter () {
            document.getElementById("quantityInput").value = document.getElementById("quantityInput").value.replace(/[^0-9]+/g, '');
        }

        function replaceComma () {
            document.getElementById("priceInput").value = document.getElementById("priceInput").value.replace(/,/g, '.');
        }
    </script>
}
